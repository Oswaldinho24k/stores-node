mixin storeCard(store={})
    .store
        .store__hero
            //img(src=`/uploads/${store.photo}`)
            .store__actions
                .store__action.store__action--edit
                    a(href=`/stores/${store._id}/edit/`)
                        != h.icon('pencil')

            img(src="https://static.pexels.com/photos/297743/pexels-photo-297743.jpeg")
            h2.title
                a(href=`/stores/${store.slug}`) #{store.name}
        .store__details
            p=store.description.split(' ').slice(0,25).join(' ')